{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"experimentalDecorators": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"pretty": true,
		"lib": ["es6", "dom", "es2015.promise"],
		"types": ["vue-typescript-import-dts"]
	},
	"exclude": [
		"node_modules", "test"
	],
	"atom": {
		"rewriteTsconfig": false
	},
	"compileOnSave": true
}
